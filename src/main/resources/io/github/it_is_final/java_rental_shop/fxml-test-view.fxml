<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="640.0" prefHeight="480.0" fx:controller="io.github.it_is_final.java_rental_shop.Controller">
    <children>
        <VBox spacing="12" AnchorPane.topAnchor="12.0" AnchorPane.leftAnchor="12.0" AnchorPane.rightAnchor="12.0" AnchorPane.bottomAnchor="12.0">
            <!-- Top Row: Search and Bookshop Title -->
            <HBox spacing="12" alignment="CENTER_LEFT">
                <Label text="Search for Videos"/>
                <TextField fx:id="searchField" prefWidth="160"/>
                <Button text="Search" onAction="#onHelloButtonClick"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="RMIT Bookshop" textFill="blue">
                    <font>
                        <Font size="20"/>
                    </font>
                </Label>
            </HBox>

            <!-- Main Area -->
            <HBox spacing="12" VBox.vgrow="ALWAYS">

                <!-- Left Pane -->
                <VBox spacing="12" HBox.hgrow="ALWAYS">

                    <!-- Book List -->
                    <ListView fx:id="bookListView" prefHeight="90"/>

                    <!-- Cart Header -->
                    <HBox spacing="12">
                        <Label text="Your Cart"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label text="Quantity:"/>
                        <TextField fx:id="quantityField" prefWidth="35" text="1"/>
                    </HBox>

                    <!-- Cart Items -->
                    <ListView fx:id="cartListView" prefHeight="80"/>

                    <!-- Cart Buttons + Receipt Side-by-Side -->
                    <HBox spacing="12" VBox.vgrow="ALWAYS">

                        <!-- Buttons on the left -->
                        <VBox spacing="12" alignment="TOP_LEFT">
                            <Button text="Add to Cart" fx:id="addToCartButton" prefWidth="320" onAction="#onHelloButtonClick"/>
                            <Button text="Remove from Cart" fx:id="removeFromCartButton" prefWidth="320" onAction="#onHelloButtonClick"/>
                        </VBox>

                        <!-- Receipt area expands -->
                        <TextArea fx:id="receiptArea" text="Receipt will be displayed here." VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS"/>
                    </HBox>

                </VBox>

                <!-- Right Pane -->
                <VBox spacing="12" prefWidth="180" minWidth="180" maxWidth="180" alignment="TOP_RIGHT">

                    <Region VBox.vgrow="ALWAYS"/>

                    <!-- Bottom Controls -->
                    <VBox spacing="12" alignment="BOTTOM_RIGHT">
                        <CheckBox text="Are you a member?" fx:id="membershipCheckbox"/>
                        <Button text="Rent Videos" fx:id="rentVideosButton" prefWidth="160" onAction="#onHelloButtonClick"/>
                        <Button text="Save Receipt" fx:id="saveReceiptButton" prefWidth="160" onAction="#onHelloButtonClick"/>
                        <Label fx:id="totalLabel" text="Total: $0" style="-fx-font-size: 14px;"/>
                    </VBox>

                </VBox>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
