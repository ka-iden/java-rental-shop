<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.ImageView?> 

<?import javafx.scene.control.SpinnerValueFactory.IntegerSpinnerValueFactory?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="640.0" prefHeight="480.0" fx:controller="io.github.it_is_final.java_rental_shop.Controller">
    <children>
        <VBox spacing="12" AnchorPane.topAnchor="12.0" AnchorPane.leftAnchor="12.0" AnchorPane.rightAnchor="12.0" AnchorPane.bottomAnchor="12.0">
            <!-- Top Row: Search and Bookshop Title -->
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label text="Search for Videos"/>
                <TextField fx:id="searchField" prefWidth="160"/>
                <Button text="Search" onAction="#onSearchButtonClick"/>
                <Region HBox.hgrow="ALWAYS"/>
                <ImageView fx:id="rmitLogoView" fitWidth="100" preserveRatio="true"/>
                <Label text="Video Rental" textFill="red">
                    <font>
                        <Font size="20"/>
                    </font>
                </Label>
            </HBox>

            <!-- Main Area -->
            <HBox spacing="8" VBox.vgrow="ALWAYS">
                <!-- Left Pane -->
                <VBox spacing="12" HBox.hgrow="ALWAYS">
                    <!-- Book List -->
                    <ListView fx:id="bookListView"/>

                    <!-- Cart Header -->
                    <HBox spacing="8">
                        <Label text="Your Cart"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label text="Quantity:"/>
                        <Spinner fx:id="quantityField" prefWidth="100">
                            <valueFactory>
                                <SpinnerValueFactory.IntegerSpinnerValueFactory min="0" initialValue="0"/>
                            </valueFactory>
                        </Spinner>
                    </HBox>

                    <!-- Cart Items -->
                    <ListView fx:id="cartListView"/>

                    <!-- Receipt Area -->
                    <HBox spacing="8">
                        <!-- Buttons on the left with fixed size -->
                        <VBox spacing="12" alignment="TOP_LEFT">
                            <Button text="Add to Cart" fx:id="addToCartButton" minWidth="120" onAction="#onAddToCartButtonClick"/>
                            <Button text="Remove from Cart" fx:id="removeFromCartButton" minWidth="120" onAction="#onRemoveFromCartButtonClick"/>
                        </VBox>
                        <!-- Receipt -->
                        <TextArea text="Receipt will be displayed here." fx:id="receiptArea" HBox.hgrow="ALWAYS" minHeight="150" editable="false"/>
                    </HBox>
                </VBox>

                <!-- Right Pane -->
                <VBox spacing="12" prefWidth="130" minWidth="130" maxWidth="130" alignment="TOP_RIGHT">
                    <Region VBox.vgrow="ALWAYS"/>
                    <!-- Bottom Controls -->
                    <VBox spacing="12" alignment="BOTTOM_RIGHT">
                        <CheckBox text="Are you a member?" fx:id="membershipCheckbox"/>
                        <Button text="Rent Videos" fx:id="rentVideosButton" prefWidth="130" onAction="#onRentVideoButtonClick"/>
                        <Button text="Save Receipt" fx:id="saveReceiptButton" prefWidth="130" onAction="#onSaveReceiptButtonClick"/>
                        <Label text="Total: $0.00" fx:id="totalLabel" style="-fx-font-size: 14px;"/>
                    </VBox>
                </VBox>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
